    <input type="number" id="hoursSaved" readonly />

    <div class="chart-container">
      <canvas id="confidenceChart"></canvas>
    </div>
  </div>

  <div class="section">
    <h2>Recommended Redeployment Paths</h2>
    <div class="card-list" id="redeployments"></div>
  </div>

  <div class="section">
    <h2>Estimated ROI Impact <span title="Confidence tiers help quantify how reliably ROI can be attributed to automation outcomes.">ℹ️</span></h2>
    <div class="summary" id="roiSummary"></div>
    <button onclick="alert('PDF Download Coming Soon!')">Download CFO Report</button>
  </div>

  <script>
    const toolWeights = {
      'ChatGPT': 30, 'GitHub Copilot': 40, 'Notion AI': 20,
      'AgentForce': 50, 'Midjourney': 25, 'Claude': 20,
      'Jasper': 15, 'Perplexity': 10, 'Custom RAG Stack': 60
    };

    const departmentPaths = {
      'Customer Support': ['Deflection Optimization', 'Upsell Flow Tuning'],
      'Engineering': ['Tech Debt Reduction', 'QA Automation'],
      'RevOps': ['Pipeline Forecasting', 'Lead Scoring'],
      'Marketing': ['Content Refresh', 'SEO AI Experiments'],
      'Finance': ['Cost Center Automation', 'Forecast Reconciliation'],
      'Sales': ['Pre-Sales Email Automation', 'Proposal Gen Acceleration']
    };

    let chart;

    function getCheckedValues(containerId) {
      return [...document.querySelectorAll(`#${containerId} input:checked`)].map(cb => cb.value);
    }

    function calculateTotalHours() {
      const selected = getCheckedValues('toolsUsed');
      return selected.reduce((sum, tool) => sum + (toolWeights[tool] || 0), 0);
    }

    function calculateConfidenceHours(total) {
      const high = Math.round(total * 0.6);
      const medium = Math.round(total * 0.25);
      const low = total - high - medium;
      return [high, medium, low];
    }

    function updateChart() {
      const [high, medium, low] = calculateConfidenceHours(parseInt(document.getElementById('hoursSaved').value || 0));
      const ctx = document.getElementById('confidenceChart').getContext('2d');
      if (chart) chart.destroy();
      chart = new Chart(ctx, {
        type: 'pie',
        data: {
          labels: ['High Confidence', 'Medium Confidence', 'Low Confidence'],
          datasets: [{
            data: [high, medium, low],
            backgroundColor: ['#0b2c59', '#5b89c8', '#9eb8d1']
          }]
        },
        options: {
          responsive: true,
          plugins: { legend: { position: 'bottom' } }
        }
      });
    }

    function updateROI() {
      const [high, medium, low] = calculateConfidenceHours(parseInt(document.getElementById('hoursSaved').value || 0));
      const roiHigh = high * 425, roiMedium = medium * 180, roiLow = low * 90;
      const total = roiHigh + roiMedium + roiLow;
      document.getElementById('roiSummary').innerHTML = `
        <p><span class="highlight">High Confidence Tier:</span> $${roiHigh.toLocaleString()}</p>
        <p><span class="highlight">Medium Confidence Tier:</span> $${roiMedium.toLocaleString()}</p>
        <p><span class="highlight">Low Confidence Tier:</span> $${roiLow.toLocaleString()}</p>
        <p><span class="highlight">Total Q ROI:</span> <strong>$${total.toLocaleString()}</strong></p>`;
    }

    function updateRedeployments() {
      const selected = getCheckedValues('departments');
      const paths = new Set();
      selected.forEach(dep => departmentPaths[dep]?.forEach(p => paths.add(p)));
      document.getElementById('redeployments').innerHTML =
        [...paths].map(p => `<div class="card"><strong>${p}</strong> Reallocated to: ${p}</div>`).join('');
    }

    function updateAll() {
      const total = calculateTotalHours();
      document.getElementById('hoursSaved').value = total;
      updateChart();
      updateROI();
      updateRedeployments();
    }

    window.onload = () => {
      document.querySelectorAll('input[type=checkbox]').forEach(cb =>
        cb.addEventListener('change', updateAll)
      );
      updateAll(); // Initial render
    };
  </script>
</body>

